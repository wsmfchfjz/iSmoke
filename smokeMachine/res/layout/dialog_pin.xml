<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pin_dialog_height"
    android:background="@drawable/frame_light_gray_round">

    <TextView
        android:id="@+id/confirmPINTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_oven"
        android:text="Please enter the PIN code"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/PINText"
        android:layout_below="@+id/confirmPINTips"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:inputType="number"
        android:padding="7dp"
        android:background="@drawable/input_gray_round" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN Show On The Smoke Generator Display Screen."
        android:textColor="@color/dark_gray_oven"
        android:layout_below="@+id/PINText"
        android:layout_alignLeft="@+id/PINText"
        android:layout_alignRight="@+id/PINText"
        android:padding="5dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/confirmPIN"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/button_red_round_bottom"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
